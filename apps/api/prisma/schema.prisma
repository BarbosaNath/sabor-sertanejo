generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  id       String  @id @default(uuid())
  name     String
  email    String  @unique
  password String
  isAdmin  Boolean @default(false)

  orders    Order[]
  favorites Item[]
  address   Address[]
  coupon    Coupon[]

  createdAt DateTime @default(now())
  updatedAt DateTime @default(now()) @updatedAt
}

model Item {
  id            String   @id @default(uuid())
  name          String
  price         Float
  originalPrice Float
  description   String
  estimatedTime Int
  imageURL      String
  offer         Boolean
  category      Category
  stock         Int

  favoritedBy User[]
  order       Order[]

  createdAt DateTime @default(now())
  updatedAt DateTime @default(now()) @updatedAt

  @@index([name, price])
}

model Order {
  total Float
  id    String @id @default(uuid())

  items    Item[]
  user     User?   @relation(fields: [userId], references: [id])
  userId   String?
  coupon   Coupon? @relation(fields: [couponId], references: [id])
  couponId String?

  createdAt DateTime @default(now())
  updatedAt DateTime @default(now()) @updatedAt
}

model Address {
  id String @id @default(uuid())

  addressLine1 String
  addressLine2 String
  street       String
  city         String
  state        String
  zipCode      String

  user User[]

  createdAt DateTime @default(now())
  updatedAt DateTime @default(now()) @updatedAt
}

model Coupon {
  id          String @id @default(uuid())
  title       String
  description String
  descount    Float?
  percentage  Float?

  user  User[]
  order Order[]

  createdAt DateTime @default(now())
  updatedAt DateTime @default(now()) @updatedAt
}

enum Category {
  PIZZA
  SWEET_PIZZA
  ESFIHA
  DRINK
  DESSERT
}
